	e.addPerformer("Teoman");
	cout<<e;//data.addEvent(e);
	
	Event d("Tiyatro 08-09","ANKARA SANAT EVİ","Sivas 98","20080304",15);
	d.addPerformer("Genco Erkal");
	d.addPerformer("Rutkay Aziz");
	cout<<d;//data.addEvent(d);
	
	Event f("ODTU ACILIS 2008","ANKARA SANAT EVİ","Acılıs Konseri","20081017",10);
	f.addPerformer("Şebnem Ferah");
	f.addPerformer("Mor ve Ötesi");
	f.addPerformer("Ezginin Günlüğü");
	cout<<f;//data.addEvent(f);
	
	return 0;
}


